%h1 Recipe Detail

%h2= @recipe.rname

/ %p= @recipe.rcalorie

- if @image_link != nil
	- image_important = @image_link['recipe_image']
	
/ %h2= @description
/ %h2 Cooking Instruction
-str = ""
-span = @description["direction"].size + 1
-@description["direction"].each do |dir|
	-str += dir["direction_description"]
	-str += "\n"

%table.table.table-striped
	%thead
		%tr
			%th= @recipe.rname
			%th Cooking Instruction

	%tbody
		%tr
			%td{:rowspan => "#{span}"}= image_tag(image_important)
			%td
				-@description["direction"].each do |dir|
					%tr
						%td= dir["direction_description"]

/ <%= link_to 'Edit', edit_recipe_path(@recipe) %> |

=link_to_function "Back", "history.back()", class: "btn btn-xs edituser"
/ =link_to 'All recipes', recipes_path, class: "btn btn-xs edituser"
/ =link_to 'Back', foods_path
/ =link_to 'Back', url_for(:back)






