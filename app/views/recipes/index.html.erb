<h1>Listing recipes</h1>

<table>
  <tr>
    <th>Rid</th>
    <th>Rname</th>
    <th>Rcalorie</th>
    <th>Rrating</th>
    <th>Rcategory</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipes.each do |recipe| %>
  <tr>
    <td><%= recipe.rid %></td>
    <td><%= recipe.rname %></td>
    <td><%= recipe.rcalorie %></td>
    <td><%= recipe.rrating %></td>
    <td><%= recipe.rcategory %></td>
    <td><%= link_to 'Show', recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

