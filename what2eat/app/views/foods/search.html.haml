%h1 Search results

%h2= @ingredient

/ %h2= @detail

/ %h3= @results

%table
	%thead
		%tr
			%th Name
			%th Discription
			%th Image
			%th Id
			%th More Information

	%tbody
	- @detail.each do |recipe|
		%tr
			%td= recipe['recipe_name']
			%td= recipe['recipe_description']
			%td= image_tag(recipe['recipe_image'])
			%td= recipe['recipe_id']
			%td= link_to "details", recipe['recipe_url']


= link_to "Back", foods_path, :method => :get